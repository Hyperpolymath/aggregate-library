{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@aggregate-library/core",
  "version": "1.0.0",
  "license": "MIT OR AGPL-3.0-or-later",

  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "tasks": {
    "validate": "deno task validate:specs && deno task validate:yaml",
    "validate:specs": "deno run --allow-read scripts/validate-specs.ts",
    "validate:yaml": "deno run --allow-read scripts/validate-yaml.ts",
    "test": "deno test --allow-read",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno task validate && deno task test && deno task lint"
  },

  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  },

  "exclude": [
    "node_modules",
    "dist",
    ".git"
  ],

  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },

  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve"
  },

  "lock": false
}
